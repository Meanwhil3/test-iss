pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Clone repository
                    git 'https://github.com/Chinjuku/CareTrack'
                }
                // Build Docker images
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                // Run Docker containers
                sh 'docker-compose up -d --build'
            }
        }
    }

    post {
        always {
            // Clean up workspace after build
            cleanWs()
        }
        success {
            // Notify when build succeeds
            echo 'Build and Deploy succeeded!'
        }
        failure {
            // Notify when build fails
            echo 'Build or Deploy failed!'
        }
    }
}
